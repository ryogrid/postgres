/* Test ECPG notice/warning/error messages */

#include <stdlib.h>

EXEC SQL WHENEVER SQLERROR STOP;

int
main(void)
{
    EXEC SQL BEGIN DECLARE SECTION;
    EXEC SQL VAR str IS STRING;
    EXEC SQL END DECLARE SECTION;    

    /* Test AT option errors */
    EXEC SQL AT connection1 VAR str IS VARCHAR(20);

    EXEC SQL AT connection1 CREATE TYPE string AS VARCHAR(50);

    return 0;
}
